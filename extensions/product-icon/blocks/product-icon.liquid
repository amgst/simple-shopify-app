{% comment %} App Block to place an icon on product media {% endcomment %}
<div id="product-icon-app" style="position: relative;">
  <style>
    .product-icon__image {
      position: absolute;
      width: 40px;
      height: 40px;
      z-index: 10;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      transition: transform 0.2s ease;
      cursor: pointer;
    }
    .product-icon__image:hover { transform: scale(1.1); }
    .product-icon__top-left { top: 10px; left: 10px; }
    .product-icon__top-right { top: 10px; right: 10px; }
    .product-icon__bottom-left { bottom: 10px; left: 10px; }
    .product-icon__bottom-right { bottom: 10px; right: 10px; }
  </style>
  <img
    class="product-icon__image product-icon__{{ block.settings.icon_position }}"
    src="{{ block.settings.icon_url | escape }}"
    alt="Product icon"
    loading="lazy"
  >
</div>

{% schema %}
{
  "name": "Product Icon",
  "target": "section",
  "templates": ["product"],
  "settings": [
    {
      "type": "url",
      "id": "icon_url",
      "label": "Icon URL"
    },
    {
      "type": "select",
      "id": "icon_position",
      "label": "Icon position",
      "default": "top-right",
      "options": [
        { "label": "Top right", "value": "top-right" },
        { "label": "Top left", "value": "top-left" },
        { "label": "Bottom right", "value": "bottom-right" },
        { "label": "Bottom left", "value": "bottom-left" }
      ]
    }
  ]
}
{% endschema %}
